<ul class="a-list{{#if modifier}} a-list--{{modifier}}{{/if}}">
	{{#each listItems}}
		<li class="a-list__item">
			{{!-- Review: Code styling, please use indentations for readability --}}
			{{{text}}}&nbsp; {{#if icon}}<span class="a-list__icon">{{pattern name="icon" icon=icon}}</span>{{/if}}
		</li>
	{{/each}}
</ul>
